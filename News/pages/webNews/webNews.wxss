/* pages/webNews/webNews.wxss */
.title-line {
  height: 10rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.image-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10rpx;
}

.news-title {
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
  text-align:left;
  font-size: 40rpx;
  line-height: 64rpx;
  opacity: 0.8;
}

.wrapper {
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: row;
}

.news-author {
  flex-grow: 1;
  text-align:left;
  font-size: 25rpx;
  line-height: 35rpx;
  opacity: 0.65;
}

.news-time {
  text-align:right;
  font-size: 25rpx;
  line-height: 35rpx;
  opacity: 0.65;
}

.news-text {
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
  text-align:left;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.7;
}

.news-url {
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
  text-align:left;
  font-size: 25rpx;
  font-family: monospace;
  line-height: 35rpx;
  opacity: 0.65;
  color: blue;
}